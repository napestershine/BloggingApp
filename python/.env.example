# Example environment variables for BloggingApp Python backend
# Copy this file to .env and update the values as needed

DATABASE_URL=postgresql://user:password@localhost:5433/blog_db
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Twilio WhatsApp Configuration (optional)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_WHATSAPP_NUMBER=your-twilio-whatsapp-number

# WhatsApp Notification Safety Settings
WHATSAPP_NOTIFICATIONS_ENABLED=false
WHATSAPP_RATE_LIMIT_PER_MINUTE=10
WHATSAPP_RATE_LIMIT_PER_HOUR=100

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
