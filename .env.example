# Environment variables for BloggingApp
# Copy this file to .env and update the values as needed

# Database Configuration
POSTGRES_DB=blog_db
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432
DATABASE_URL=postgresql://user:password@db:5432/blog_db

# API Configuration
API_PORT=8000
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Web Configuration
WEB_PORT=3000
NODE_ENV=production
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
API_INTERNAL_URL=http://api:8000
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_TELEMETRY_DISABLED=1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://web:3000
CORS_ALLOW_CREDENTIALS=true

# Docker Build Configuration
API_BUILD_TARGET=prod
WEB_BUILD_TARGET=runner

# Optional: Twilio WhatsApp Configuration
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_WHATSAPP_NUMBER=your-twilio-whatsapp-number

# WhatsApp Notification Safety Settings
WHATSAPP_NOTIFICATIONS_ENABLED=false
WHATSAPP_RATE_LIMIT_PER_MINUTE=10
WHATSAPP_RATE_LIMIT_PER_HOUR=100

# Optional: Analytics and monitoring
# NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Development Environment Variables
# Uncomment for development
# API_BUILD_TARGET=dev
# WEB_BUILD_TARGET=dev
# NODE_ENV=development
# POSTGRES_DB=blog_dev